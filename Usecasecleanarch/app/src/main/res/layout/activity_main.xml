<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.MainActivity">

    <TextView
        android:id="@+id/dataTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="No data"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/getButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="20dp"
        android:text="Get user data"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/dataEditText"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="69dp"
        android:ems="10"
        android:hint="Put data here"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/getButton"
        app:layout_constraintStart_toStartOf="@+id/getButton"
        app:layout_constraintTop_toBottomOf="@+id/getButton" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/saveButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="41dp"
        android:text="Save user data"
        app:layout_constraintEnd_toEndOf="@+id/dataEditText"
        app:layout_constraintStart_toStartOf="@+id/dataEditText"
        app:layout_constraintTop_toBottomOf="@+id/dataEditText" />
</androidx.constraintlayout.widget.ConstraintLayout>